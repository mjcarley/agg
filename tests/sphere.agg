# test file for parametrically specified generic aircraft
#
# syntax:
#
# global block contains parameter declarations
#
# distribution block(s) contain(s) description of geometry as
# parameterized patches
#

global {
# syntax: <identifier> = "<expression>" (quotes required for non-numeric values)
  D = 1.0
  n1 = 0.5
  n2 = 0.5
}

grid(4096, 8192)

{
  spherical(3)
}

distribution("sphere", 0, 1, 24, "cosine")

## argument list:
##   distribution label (for readability)
##   smin, smax: parameter range
##   number of sections to be generated for interpolation of shape
##   section spacing for shape generation

{
  transform("shrink", 0.5, 0.0, "sqrt(t*(1-t))")
  transform("scale", "2*D")
  transform("shift", "-D", 0.0, "D*t")

  shape("ellipse", -1, 1, n1, n2) 
}
